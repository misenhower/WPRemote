                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" VerticalAlignment="Center" Style="{StaticResource PhoneTextNormalStyle}" Text="Animated" />
                <TextBlock Grid.Row="1" VerticalAlignment="Center" Style="{StaticResource PhoneTextNormalStyle}" Text="Instant" />
                
                <StackPanel Grid.Column="1" Grid.Row="0" HorizontalAlignment="Right" Orientation="Horizontal">
                    <Button Content="#1" Tag="1" Click="AnimatedNavigationButton_Click" />
                    <Button Content="#2" Tag="2" Click="AnimatedNavigationButton_Click" />
                    <Button Content="#3" Tag="3" Click="AnimatedNavigationButton_Click" />
                    <Button Content="#4" Tag="4" Click="AnimatedNavigationButton_Click" />
                </StackPanel>

                <StackPanel Grid.Column="1" Grid.Row="1" HorizontalAlignment="Right" Orientation="Horizontal">
                    <Button Content="#1" Tag="1" Click="InstantNavigationButton_Click" />
                    <Button Content="#2" Tag="2" Click="InstantNavigationButton_Click" />
                    <Button Content="#3" Tag="3" Click="InstantNavigationButton_Click" />
