    <ControlTemplate x:Name="BrowseIcon">
        <Canvas Height="48" UseLayoutRounding="False" Width="48">
            <Ellipse Style="{StaticResource BaseCircleStyle}" />
            <Canvas Height="17" Canvas.Left="12" Canvas.Top="15" Width="24">
